class Solution {

    public int search(int[] nums, int target) {
        int start = 0;
        int end = nums.length - 1;

        while (start <= end) {
            int mid = (start + end) / 2;

            if (nums[mid] == target) {
                return mid;
            }

            if (target < nums[mid]) {
                end = mid - 1;
            } else {
                start = mid + 1;
            }
        }

        return -1;
    }

    public static void main(String[] args) {
        Solution obj = new Solution();

        int[] arr = {1, 2, 3, 4, 5, 6};
        int target = 3;

        System.out.println(obj.search(arr, target));
    }
}
